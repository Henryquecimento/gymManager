{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <div class="header">
            <a class="button" href="/members/create">Novo</a>

            <form action="/members" method="GET">
                <input type="text" name="filter" placeholder="Nome">
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <th>Membros</th>
                <th>E-mail</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>
                            {{ member.name }}</td>
                        <td>{{member.email}}</td>
                        <td>{{member.weight}}
                            Kg</td>
                        <td>{{member.height}}
                            cm</td>

                        <td>
                            <a href="/members/{{ member.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}